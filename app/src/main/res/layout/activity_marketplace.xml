<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_grey_900">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorAccent"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_grey_900">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/item_scroll">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_marketplace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardBackgroundColor="@color/blue_grey_900"
                        card_view:contentPadding="10dp"
                        app:cardBackgroundColor="@color/blue_grey_900">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:src="@drawable/list_itemnew"
                                android:background="@drawable/rounded_corners"
                                android:layout_width="120dp"
                                android:layout_height="160dp"
                                android:id="@+id/list_item"
                                android:layout_margin="4dp"/>

                            <Button
                                android:id="@+id/btn_list"
                                android:layout_width="223dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/ripple_effect"
                                android:gravity="center"
                                android:text="List Item"
                                android:textColor="@color/colorAccent" />
                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_marketplace2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardBackgroundColor="@color/blue_grey_900"
                        card_view:contentPadding="10dp"
                        android:layout_below="@+id/card_view_marketplace"
                        app:cardBackgroundColor="@color/blue_grey_900">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:src="@drawable/sell4"
                                android:background="@drawable/rounded_corners"
                                android:layout_width="120dp"
                                android:layout_height="160dp"
                                android:id="@+id/sell_item"
                                android:layout_margin="4dp"/>

                            <Button
                                android:id="@+id/btn_buy"
                                android:layout_width="223dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/ripple_effect"
                                android:gravity="center"
                                android:text="Buy Item"
                                android:textColor="@color/colorAccent" />
                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_marketplace3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardBackgroundColor="@color/blue_grey_900"
                        card_view:contentPadding="10dp"
                        android:layout_below="@+id/card_view_marketplace2"
                        app:cardBackgroundColor="@color/blue_grey_900">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:id="@+id/lend_item"
                                android:layout_width="120dp"
                                android:layout_height="140dp"
                                android:layout_margin="4dp"
                                android:background="@drawable/rounded_corners"
                                android:src="@drawable/borrownew"/>

                            <Button
                                android:id="@+id/btn_lend"
                                android:layout_width="223dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/ripple_effect"
                                android:gravity="center"
                                android:text="Lend Item"
                                android:textColor="@color/colorAccent" />
                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_marketplace4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardBackgroundColor="@color/blue_grey_900"
                        card_view:contentPadding="10dp"
                        android:layout_below="@+id/card_view_marketplace3"
                        app:cardBackgroundColor="@color/blue_grey_900">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:src="@drawable/exchangenew"
                                android:background="@drawable/rounded_corners"
                                android:layout_width="120dp"
                                android:layout_height="160dp"
                                android:id="@+id/exchange_item"
                                android:layout_margin="4dp"/>

                            <Button
                                android:id="@+id/btn_exchange"
                                android:layout_width="223dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/ripple_effect"
                                android:gravity="center"
                                android:text="Exchange Item"
                                android:textColor="@color/colorAccent" />
                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/myitems"
                        android:text="My Items"
                        android:layout_below="@+id/item_scroll"
                        android:layout_weight="1"
                        android:background="@drawable/button_border"
                        android:textColor="@color/colorAccent"
                        android:layout_centerHorizontal="true"/>
                </LinearLayout>
            </ScrollView>

            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="SMART_BANNER"
                ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
            </com.google.android.gms.ads.AdView>

        </RelativeLayout>
    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view_parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:background="@color/blue_grey_900">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.NavigationView
                    android:id="@+id/nav_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:fitsSystemWindows="true"
                    app:menu="@layout/drawer_view"
                    app:headerLayout="@layout/drawer_header"
                    android:background="@color/blue_grey_900"
                    app:itemIconTint="@color/colorAccent"
                    app:itemTextColor="@color/colorAccent"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/nav_view"
                    android:background="@color/blue_grey_900"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/uta_logo"/>

                <!--suppress AndroidDomInspection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Â©Copyright 2018 UT Arlington"
                    android:fontFamily="@font/hammersmith_one"
                    android:textColor="@color/orange_A400"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"/>

            </RelativeLayout>

        </ScrollView>

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>