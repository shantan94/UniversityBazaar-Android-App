<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:background="@drawable/list_item"
        android:layout_width="180dp"
        android:layout_height="225dp"
        android:id="@+id/list_item"
        android:layout_margin="4dp"/>

    <ImageButton
        android:background="@drawable/sell_item"
        android:layout_width="200dp"
        android:layout_height="225dp"
        android:id="@+id/sell_item"
        android:layout_toRightOf="@+id/list_item"
        android:layout_margin="4dp"/>

    <ImageButton
        android:id="@+id/lend_item"
        android:layout_width="180dp"
        android:layout_height="225dp"
        android:layout_below="@+id/list_item"
        android:layout_margin="4dp"
        android:background="@drawable/lend" />

    <ImageButton
        android:background="@drawable/exchange"
        android:layout_width="200dp"
        android:layout_height="225dp"
        android:id="@+id/exchange_item"
        android:layout_toRightOf="@+id/lend_item"
        android:layout_below="@+id/sell_item"
        android:layout_margin="4dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myitems"
        android:text="My Items"
        android:layout_below="@+id/lend_item"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>