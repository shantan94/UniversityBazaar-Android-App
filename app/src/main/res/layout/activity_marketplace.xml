<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_grey_900">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorAccent"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey_900">

    <ImageButton
        android:background="@drawable/list_item"
        android:layout_width="180dp"
        android:layout_height="225dp"
        android:id="@+id/list_item"
        android:layout_margin="4dp"/>

    <ImageButton
        android:background="@drawable/sell_item"
        android:layout_width="200dp"
        android:layout_height="225dp"
        android:id="@+id/sell_item"
        android:layout_toRightOf="@+id/list_item"
        android:layout_margin="4dp"/>

    <ImageButton
        android:id="@+id/lend_item"
        android:layout_width="180dp"
        android:layout_height="225dp"
        android:layout_below="@+id/list_item"
        android:layout_margin="4dp"
        android:background="@drawable/lend" />

    <ImageButton
        android:background="@drawable/exchange"
        android:layout_width="200dp"
        android:layout_height="225dp"
        android:id="@+id/exchange_item"
        android:layout_toRightOf="@+id/lend_item"
        android:layout_below="@+id/sell_item"
        android:layout_margin="4dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myitems"
        android:text="My Items"
        android:layout_below="@+id/lend_item"
        android:layout_centerHorizontal="true"/>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>

        </RelativeLayout>
    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@layout/drawer_view"
        app:headerLayout="@layout/drawer_header"
        android:background="@color/blue_grey_900"
        app:itemTextColor="@color/colorAccent"/>
</android.support.v4.widget.DrawerLayout>